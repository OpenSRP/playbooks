[Unit]
Description=OpenSRP Tomcat7 Service
After=network.target

[Service]
Type=forking
WorkingDirectory={{ opensrp_user_home }}/{{ opensrp_tomcat_instance }}
User=root
Group=root
ExecStart={{ opensrp_user_home }}/{{ opensrp_tomcat_instance }}/bin/startup.sh
ExecStop={{ opensrp_user_home }}/{{ opensrp_tomcat_instance }}/bin/shutdown.sh

[Install]
WantedBy=multi-user.target
